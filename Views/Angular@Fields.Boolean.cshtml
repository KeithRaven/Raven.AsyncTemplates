@using Orchard.Utility.Extensions
@{
    string name = Model.ContentField.DisplayName;
    string path = AngularHelpers.PathForField(Model, "Value");
 }
<p class="text-field text-field-@name.HtmlClassify()" ng-if="@path !== null">
    <span class="name">@name:</span>
    <span class="value" ng-bind="@path === true ? '@T(Model.Settings.OnLabel).ToString()' : '@T(Model.Settings.OffLabel).ToString()'"></span>
</p>    

