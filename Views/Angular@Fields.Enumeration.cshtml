@using Orchard.Utility.Extensions
@{
    string path = AngularHelpers.PathForField(Model, "Value");
    string name = Model.ContentField.DisplayName;
    <p class="enumeration-field enumeration-field-@name.HtmlClassify()" ng-if="@path">
        <span class="name">@name:</span>
        <span class="value" ng-repeat="item in @path"><span ng-bind="item"></span></span>
    </p>

}